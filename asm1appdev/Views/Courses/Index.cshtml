@model IEnumerable<asm1appdev.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Index Course</h2>

@Html.ActionLink("Create new Course", "Create", "Courses",
        null,
        new { @class = "btn btn-primary" })
@using (Html.BeginForm("Index", "Courses", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Task Name:</label><br>
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.Category.Name</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Courses",
                              new { id = item.Id },
                              new { @class = "btn btn-primary" })
                    @Html.ActionLink("Edit", "Edit", "Courses",
                              new { id = item.Id },
                              new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete ", "Delete", "Courses",
                                 new { id = item.Id },
                                 new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>