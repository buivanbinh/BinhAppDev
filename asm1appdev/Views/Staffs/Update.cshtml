@model asm1appdev.ViewModels.StarffViewModel
@{ ViewBag.Title = "Edit";
}

<h2>Edit staff's profile</h2>

@using (Html.BeginForm("Update", "Staffs", "POST"))
{

    @Html.HiddenFor(model => model.ApplicationUser.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.ApplicationUser.FullName)
        @Html.TextAreaFor(model => model.ApplicationUser.FullName, new { @class = "form-control" })
    </div>

    


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Change</button>
    </div>
}