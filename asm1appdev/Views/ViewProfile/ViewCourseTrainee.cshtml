@model IEnumerable<asm1appdev.Models.Course>
@{
    ViewBag.Title = "ViewCourse";
}

<h2>View Course user</h2>

@Html.ActionLink("Back to Profile", "ViewProfile", "Account",
    null,
    new { @class = "btn btn-primary" })
@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name Course</th>
                <th>Course Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="color:black; text-align:center">
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h1>No Course had assigned</h1>
}