@model IEnumerable<asm1appdev.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create new Category", "Create", "Categories",
    null,
    new { @class = "btn btn-primary" })
@using (Html.BeginForm("Index", "Categories", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Category Name:</label><br>
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>

                    @Html.ActionLink("Edit ", "Edit", "Categories",
                                 new { id = item.Id },
                                 new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", "Categories",
                                 new { id = item.Id },
                                 new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>